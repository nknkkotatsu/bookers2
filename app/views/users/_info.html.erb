<table class="table table-user">
  <h3>User info</h3>
  <thead>
    <tr>
      <%= image_tag user.get_profile_image(100,100) %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>Name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>Introduction</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th colspan="2">
  <%= link_to "プロフィール編集", edit_user_path(current_user.id) %>
      </th>
    </tr>
  </tbody>
</table>