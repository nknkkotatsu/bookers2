 <div class="container">
  <div class="row">
    <div class="col-md-3">
<div>
  <%= flash[:notice] %>
</div>
<%= render 'info', user:@user %>
<%= render 'books/create', books:@books %>
    </div>

<div class="col-md-8 offset-md-1">

<h3>Books</h3>
<!-- ユーザーの投稿一覧 -->
  <table class="table">
   <thead>
     <tr>
       <th scope="col"></th>
       <th scope="col">Title</th>
       <th scope="col">Opinion</th>
     </tr>
   </thead>
   <tbody>
    <% @books.each do |book| %>
    <tr>
        <td>
            <%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(100,100) %>
            <% end %>
        <br>
      <td><%= link_to book.title,book_path(book.id) %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
   </tbody>
  </table>
</div>
</div>
