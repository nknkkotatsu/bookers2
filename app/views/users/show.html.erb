 <div class="container">
  <div class="row">
    <div class="col-md-3">
<%= render 'info', user:@user %>
<%= render 'books/create', books:@books %>
    </div>
    
<div class="col-md-8 offset-md-1">

<h1>Books</h1>
<!-- ユーザーの投稿一覧 -->

<div>
  <table>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag @user.get_profile_image(100,100) %><br>
      <%= link_to book.user.name, user_path(book.user) %></td>
      <td><%= link_to book.title,book_path(book.id) %></td>
      <td><%= book.body %></td>
      <% if book.user == current_user %>
        <%= link_to "Edit", edit_book_path(book.id) %>
        <%= link_to "Destroy", book_path(book),method: :delete %>
      <% end %>
    </tr>
    <% end %>
  </table>
</div>
</div>
