<%= render 'users/info', user:@user %>
<%= render 'create', books:@books %>
<h1>Book detail</h1>
  <table>
    <tr>
      <td><%= image_tag @user.get_profile_image(100,100) %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book.id) %>
        <%= link_to "Destroy", book_path(@book.id), method: :delete %>
      <% end %>
    </tr>
  </table>
