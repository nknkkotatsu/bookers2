<h1>Book detail</h1>
  <table>
    <tr>
      <td><%#= link_to @user.name, user_path(@user) %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
        <%= link_to "Edit", edit_book_path(@book.id) %>
        <%= link_to "Destroy", book_path(@book),method: :delete %>
      <% end %>
    </tr>
  </table>
