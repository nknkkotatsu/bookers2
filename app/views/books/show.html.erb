<div>
  <%= flash[:notice] %>
</div>

 <div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'create', books: @books %>
    </div>

<div class="col-md-8 offset-md-1">
  <h3>Book detail</h3>
    <table class="table">
      <tr>
        <td><%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(100,100) %><br>
              <%= @user.name %>
            <% end %>
        </td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
          <td><a class="btn btn-sm btn-success edit_book_68230" href="<%= edit_book_path(@book.id) %>">Edit</a></td>
          <td><a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger destroy_book_68230" rel="nofollow" data-method="delete" href="<%= book_path(@book.id) %>">Destroy</a></td>
        <% end %>
      </tr>
    </table>
  </div>