<h3>New book</h3>
<%= form_with model: books, url: books_path do |f| %>
  <div>
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body, "Opinion" %><br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.submit 'Create Book',class: "btn btn-sm btn-success" %>
  </div>
<% end %>